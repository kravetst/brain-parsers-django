import time, random
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
from modules.load_django import setup_django
from app.parser_app.services.save_product import save_product

def make_driver():
    options = webdriver.ChromeOptions()
    options.add_argument("--headless=new")
    options.add_argument("--window-size=1280,1024")
    driver = webdriver.Chrome(options=options)
    return driver

def search_and_parse(driver, query):
    driver.get("https://brain.com.ua/")
    wait = WebDriverWait(driver, 15)

    # 1) знайти поле пошуку (підставити XPATH/CSS)
    search_input = wait.until(EC.presence_of_element_located((By.CSS_SELECTOR, "CSS_FOR_SEARCH_INPUT")))
    search_input.clear()
    search_input.send_keys(query)

    # 2) натиснути кнопку пошуку
    search_btn = wait.until(EC.element_to_be_clickable((By.CSS_SELECTOR, "CSS_FOR_SEARCH_BUTTON")))
    search_btn.click()

    # 3) клікнути на перший результат
    first = wait.until(EC.element_to_be_clickable((By.CSS_SELECTOR, "CSS_FOR_FIRST_RESULT")))
    first.click()

    time.sleep(random.uniform(0.5,1.5))  # невелика пауза

    # 4) після переходу на товар — збір полів (можеш використати ті ж XPaths/CSS що і для direct)
    title = safe_text(driver, By.CSS_SELECTOR, "CSS_FOR_TITLE")
    # ... інші поля як у requests парсері
    data = {
        "title": title,
        # ...
        "link": driver.current_url
    }
    print(data)
    save_product(data, parser_tag="selenium")

def safe_text(driver, by, selector, timeout=10):
    try:
        el = WebDriverWait(driver, timeout).until(EC.presence_of_element_located((by, selector)))
        return el.text.strip()
    except:
        return None

if __name__ == "__main__":
    setup_django()
    driver = make_driver()
    try:
        search_and_parse(driver, "Apple iPhone 15 128GB Black")
    finally:
        driver.quit()